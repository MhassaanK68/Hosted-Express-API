<%- include('partials/header') %>

    <!-- Breadcrumb -->
    <nav class="my-2">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
            <div class="flex items-center space-x-2 text-sm">
                <a href="/" class="text-gray-500 hover:[&]:color-primary">
                    <span class="flex items-center gap-2">
                        <i data-lucide="home" class="w-4 h-4"></i>
                        Home
                    </span>
                </a>
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span class="text-gray-700" id="semester-breadcrumb"><%= semester.name %></span>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="my-2">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-start mb-4">
                <h2 class="text-3xl font-bold text-gray-900 mb-4" id="semester-title"><%= semester.name %> Subjects
                </h2>
            </div>

            <!-- Subjects Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                <% subjects.forEach(subject=> { %>
                    <a href="/<%= semester.slug %>/<%= subject.slug %>"
                        class="block bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-md transition-all duration-300 group">

                        <!-- Subject Title -->
                        <h3
                            class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors line-clamp-2">
                            <%= subject.name %>
                        </h3>

                        <!-- Description -->
                        <p class="text-sm text-gray-600 mb-4 leading-relaxed line-clamp-3">
                            <%= subject.description || "Explore notes and resources curated for this subject." %>
                        </p>

                        <!-- Footer -->
                        <div class="flex items-center text-blue-600 font-medium text-sm">
                            <span>View Notes</span>
                            <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7">
                                </path>
                            </svg>
                        </div>
                    </a>

                    <% }) %>

            </div>

            <div class="py-10"></div>

        </div>
    </main>

    <%- include('partials/footer') %>