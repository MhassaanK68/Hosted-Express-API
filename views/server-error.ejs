<%- include('partials/header') %>
    <style>
        :root {
            --background: #ffffff;
            --foreground: #4b5563;
            --card: #fffbeb;
            --card-foreground: #4b5563;
            --primary: #ea580c;
            --primary-foreground: #ffffff;
            --secondary: #f97316;
            --secondary-foreground: #ffffff;
            --muted: #fefce8;
            --muted-foreground: #4b5563;
            --accent: #f97316;
            --destructive: #dc2626;
            --border: #e5e7eb;
            --radius: 0.5rem;
        }
        
        .font-heading { font-family: 'Playfair Display', serif; }
        .font-body { font-family: 'Source Sans Pro', sans-serif; }
        
        .wobble {
            animation: wobble 2s ease-in-out infinite;
        }
        
        @keyframes wobble {
            0%, 100% { transform: rotate(0deg); }
            25% { transform: rotate(-2deg); }
            75% { transform: rotate(2deg); }
        }
        
        .grid-pattern {
            background-image: 
                linear-gradient(rgba(75, 85, 99, 0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(75, 85, 99, 0.05) 1px, transparent 1px);
            background-size: 20px 20px;
        }
        
        .floating-dots {
            animation: float-dots 3s ease-in-out infinite;
        }
        
        @keyframes float-dots {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
    </style>


<div class="font-body flex items-center justify-center p-4 my-auto">
    <div class="max-w-md w-full text-center relative">
        <!-- Floating Dots Background -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="floating-dots absolute top-16 left-12 w-2 h-2 rounded-full opacity-30" style="background-color: var(--accent);"></div>
            <div class="floating-dots absolute top-24 right-16 w-1.5 h-1.5 rounded-full opacity-40" style="background-color: var(--secondary); animation-delay: -1s;"></div>
            <div class="floating-dots absolute bottom-40 left-20 w-2.5 h-2.5 rounded-full opacity-25" style="background-color: var(--primary); animation-delay: -2s;"></div>
        </div>
        
        <!-- Main Content -->
        <div class="relative z-10">
            <!-- Broken Pencil Illustration -->
            <div class="mb-8 flex justify-center">
                <div class="relative">
                    <!-- Pencil Body (broken) -->
                    <div class="wobble relative">
                        <!-- Left part of pencil -->
                        <div class="inline-block w-16 h-4 rounded-l-full" style="background-color: var(--accent); position: relative;">
                            <!-- Pencil tip -->
                            <div class="absolute -left-2 top-1 w-4 h-2 bg-yellow-200 rounded-l-full"></div>
                            <div class="absolute -left-3 top-1.5 w-2 h-1 bg-gray-800 rounded-l-full"></div>
                        </div>
                        
                        <!-- Break/crack -->
                        <div class="inline-block w-2 relative">
                            <div class="absolute top-0 left-0 w-0.5 h-4 bg-gray-300 transform rotate-12"></div>
                            <div class="absolute top-0 right-0 w-0.5 h-4 bg-gray-300 transform -rotate-12"></div>
                        </div>
                        
                        <!-- Right part of pencil -->
                        <div class="inline-block w-12 h-4 rounded-r-full" style="background-color: var(--secondary);">
                            <!-- Eraser -->
                            <div class="absolute -right-1 top-0.5 w-3 h-3 bg-pink-300 rounded-full"></div>
                        </div>
                        
                        <!-- Cute Face on left part -->
                        <div class="absolute top-6 left-4">
                            <!-- Eyes -->
                            <div class="flex space-x-1 mb-0.5">
                                <div class="w-1 h-1 rounded-full" style="background-color: var(--foreground);"></div>
                                <div class="w-1 h-1 rounded-full" style="background-color: var(--foreground);"></div>
                            </div>
                            <!-- Worried mouth -->
                            <div class="w-2 h-1 border-t-2 rounded-t-full mx-auto" style="border-color: var(--foreground);"></div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Error Message -->
            <h1 class="font-heading text-4xl font-bold mb-4" style="color: var(--destructive);">500</h1>
            <h2 class="font-heading text-2xl font-bold mb-4" style="color: var(--foreground);">Oh no! Something went wrong.</h2>
            <p class="text-lg mb-8 leading-relaxed" style="color: var(--muted-foreground);">
                We're working on it. Our notes got a bit scrambled, but we'll have everything back to normal soon.
            </p>
            
            <!-- Action Buttons -->
            <div class="space-y-4">
                <button onclick="window.location.reload()" 
                        class="w-full py-3 px-6 rounded-lg font-semibold text-lg transition-all duration-200 hover:shadow-lg transform hover:-translate-y-0.5"
                        style="background-color: var(--secondary); color: var(--secondary-foreground);">
                    Refresh Page
                </button>
                
                <button onclick="window.location.href='/'" 
                        class="w-full py-3 px-6 rounded-lg font-semibold text-lg transition-all duration-200 hover:shadow-md"
                        style="background-color: var(--card); color: var(--card-foreground); border: 2px solid var(--border);">
                    Go Home
                </button>
            </div>
            
            <!-- Help Text -->
            <p class="mt-8 text-sm" style="color: var(--muted-foreground);">
                Still having issues? <a href="https://wa.me/923307039460" class="underline hover:no-underline" style="color: var(--accent);">Contact support</a>
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>