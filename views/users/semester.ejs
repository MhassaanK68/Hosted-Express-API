            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4" id="semester-title">Semester 1 Subjects</h2>
                <p class="text-gray-600">Select a subject to view available notes and study materials</p>
            </div>

            <!-- Subjects Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <!-- Mathematics -->
                <a href="subject.html?subject=mathematics" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6 group">
                    <div class="flex items-center mb-4">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4 group-hover:bg-blue-200 transition-colors">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
