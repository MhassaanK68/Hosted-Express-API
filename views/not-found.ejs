<%- include('partials/header') %>
<div class="flex items-center justify-center p-4 my-auto">
    <div class="max-w-md w-full text-center">
        <!-- Cute notebook illustration -->
        <div class="mb-8 relative">
            <div class="w-32 h-40 mx-auto bg-white rounded-lg shadow-lg border-l-4 border-red-300 paper-lines relative overflow-hidden">
                <!-- Spiral binding holes -->
                <div class="absolute left-2 top-4 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-8 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-12 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-16 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-20 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-24 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-28 w-1 h-1 bg-gray-300 rounded-full"></div>
                <div class="absolute left-2 top-32 w-1 h-1 bg-gray-300 rounded-full"></div>
                
                <!-- Handwritten "404" -->
                <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-2xl font-medium text-gray-600 transform -rotate-2">404</span>
                </div>
                
                <!-- Small doodle -->
                <div class="absolute bottom-4 right-4">
                    <div class="w-3 h-3 border-2 border-gray-400 rounded-full"></div>
                    <div class="w-1 h-4 bg-gray-400 mx-auto"></div>
                    <div class="w-3 h-1 bg-gray-400 rounded"></div>
                </div>
            </div>
            
            <!-- Floating question mark -->
            <div class="absolute -top-2 -right-2 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-medium animate-bounce">
                ?
            </div>
        </div>

        <!-- Main content -->
        <div class="space-y-4 mb-8">
            <h1 class="text-3xl font-semibold text-gray-800 text-balance">
                {'Oops! This page got lost'}
            </h1>
            <p class="text-gray-600 leading-relaxed text-balance">
                {'Looks like this note wandered off somewhere. Don\'t worry, your other notes are safe and sound!'}
            </p>
        </div>

        <!-- Action buttons -->
        <div class="space-y-3">
            <a href="/" class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200">
                Back to Home
            </a>
        </div>

        <!-- Footer -->
        <div class="mt-12 text-sm text-gray-500">
            <p>{'Lost? Try searching for what you\'re looking for above.'}</p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>